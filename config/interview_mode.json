{
  "_description": "Interview Mode - Minimal filtering for documentary/interview content",
  "_version": "1.0.0",
  "_note": "This mode minimizes false positives by disabling aggressive filters",
  
  "pipeline": {
    "max_segment_duration_ms": 15000,
    "silence_threshold_ms": 600,
    "min_speech_duration_ms": 300
  },
  
  "vad": {
    "threshold": 0.35,
    "min_speech_duration_ms": 250,
    "min_silence_duration_ms": 500,
    "speech_pad_ms": 500,
    "max_duration_ms": 15000
  },
  
  "asr": {
    "model_size": "base",
    "compute_type": "int8",
    "beam_size": 5,
    "language": "auto",
    "post_process": {
      "_comment": "RELAXED: Only filter obvious hallucinations, not natural speech patterns",
      "enable_hallucination_filter": true,
      "repetition_threshold": 6,
      "repetition_ratio": 0.6,
      "min_diversity_ratio": 0.15,
      "min_confidence": 0.20,
      "remove_filler_words": false,
      "normalize_punctuation": true
    }
  },
  
  "translation": {
    "model_tier": "balanced",
    "enforce_sov_punctuation": true,
    "stability_threshold": 0.75
  }
}
