{
  "_description": "Sentence Mode - Optimized for sentence-by-sentence detection",
  "_version": "1.0.0",
  "_note": "Best for: dialogue, narration, clear sentence boundaries",
  
  "pipeline": {
    "max_segment_duration_ms": 20000,
    "silence_threshold_ms": 600,
    "min_speech_duration_ms": 500,
    "chunk_duration_ms": 100
  },
  
  "vad": {
    "threshold": 0.35,
    "min_speech_duration_ms": 500,
    "min_silence_duration_ms": 600,
    "speech_pad_ms": 500,
    "max_segment_duration_ms": 20000,
    "enable_pause_detection": true,
    "pause_threshold_ms": 800
  },
  
  "asr": {
    "model_size": "base",
    "compute_type": "int8",
    "beam_size": 5,
    "language": "auto",
    "post_process": {
      "enable_hallucination_filter": true,
      "repetition_threshold": 8,
      "min_diversity_ratio": 0.10,
      "min_confidence": 0.20,
      "remove_filler_words": false,
      "normalize_punctuation": true
    }
  },
  
  "translation": {
    "model_tier": "balanced",
    "enforce_sov_punctuation": true,
    "stability_threshold": 0.75
  },
  
  "ui": {
    "show_stability_indicators": true,
    "show_latency_metrics": true,
    "min_segment_duration_for_translation": 1000
  }
}
