{
  "_description": "Documentary/News Mode - Optimized for long-form content with complete sentences",
  "_version": "1.0.0",
  
  "pipeline": {
    "max_segment_duration_ms": 15000,
    "silence_threshold_ms": 800,
    "min_speech_duration_ms": 500,
    "chunk_duration_ms": 100
  },
  
  "vad": {
    "threshold": 0.35,
    "min_speech_duration_ms": 300,
    "min_silence_duration_ms": 600,
    "speech_pad_ms": 500,
    "max_duration_ms": 15000
  },
  
  "asr": {
    "model_size": "base",
    "compute_type": "int8",
    "beam_size": 5,
    "language": "auto",
    "post_process": {
      "enable_hallucination_filter": true,
      "repetition_threshold": 5,
      "min_diversity_ratio": 0.18,
      "min_confidence": 0.25,
      "remove_filler_words": true
    }
  },
  
  "translation": {
    "model_tier": "balanced",
    "enforce_sov_punctuation": true,
    "stability_threshold": 0.80
  },
  
  "ui": {
    "show_stability_indicators": true,
    "show_latency_metrics": true
  }
}
