<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Microphone access for audio capture -->
    <key>com.apple.security.device.microphone</key>
    <true/>
    
    <!-- Audio input access -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- Network access for translation APIs -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Network server (if needed for local services) -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File access for saving recordings/transcriptions -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Home directory access for config files -->
    <key>com.apple.security.files.home-relative-path.read-write</key>
    <array>
        <string>/Library/Application Support/</string>
        <string>/.config/</string>
    </array>
    
    <!-- Disable library validation (needed for some Python packages) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow JIT compilation (needed for PyTorch) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Debugging tool (remove for production) -->
    <key>com.apple.security.cs.debugger</key>
    <true/>
    
    <!-- DYLD environment variables -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
</dict>
</plist>
